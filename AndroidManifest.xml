<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.handsfree"
    android:versionCode="1"
    android:versionName="1.0" 
    android:name=".MyApp">
	
    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="18" />

    <application
        
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.handsfree.HandsFree"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.handsfree.DictateAndSend"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.handsfree.CallAnswer"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.CALLANSWER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.handsfree.VoiceRec"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.VOICEREC" />
            </intent-filter>
        </activity>
                <activity
            android:name="com.example.handsfree.ConfigureScreen"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.CONFIGURE" />
            </intent-filter>
        </activity>
            <service
				  android:name="com.example.handsfree.NotiListener"
				  android:icon="@drawable/ic_launcher"
				  android:label="NotiListener"
				  android:permission="android.permission.BIND_NOTIFICATION_LISTENER_SERVICE">
				  <intent-filter>
			         <action android:name="android.service.notification.NotificationListenerService" />
			     </intent-filter>
			</service>
			
			<service
				  android:name="com.example.handsfree.SmsListener"
				  android:icon="@drawable/ic_launcher"
				  android:label="SmsListener"
				 >
			</service>
			
			<service
		  android:name="com.example.handsfree.ReadOut"
		  android:icon="@drawable/ic_launcher"
		  android:label="ReadOut"
		 >
	</service>
	<service
		  android:name="com.example.handsfree.CallReadout"
		  android:icon="@drawable/ic_launcher"
		  android:label="CallReadout"
		 >
	</service>
	<service
		  android:name="com.example.handsfree.ReadOutAndSignal"
		  android:icon="@drawable/ic_launcher"
		  android:label="ReadOutAndSignal"
		 >
	</service>
    </application>

	<uses-permission android:name="android.permission.BIND_NOTIFICATION_LISTENER_SERVICE" />
    <uses-permission android:name="android.permission.INTERNET" />
	<uses-permission android:name="android.permission.WRITE_CONTACTS" />
	<uses-permission android:name="android.permission.SEND_SMS" />
	<uses-permission android:name="android.permission.READ_PHONE_STATE" />
	<uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS"/>
	<uses-permission android:name="android.permission.RECEIVE_SMS" />
	<uses-permission android:name="android.permission.READ_CONTACTS" />
	<uses-permission android:name="android.permission.WAKE_LOCK" />
	<uses-permission android:name="android.permission.DISABLE_KEYGUARD" />
</manifest>
